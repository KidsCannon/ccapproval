	"homepage": "https://github.com/KidsCannon/ccapproval",
	"repository": {
		"type": "git",
		"url": "https://github.com/KidsCannon/ccapproval"
	},
	"bugs": {
		"url": "https://github.com/KidsCannon/ccapproval/issues"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.13.3",
		"@slack/bolt": "^4.4.0",
		"zod": "^3.25.74"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"tsdown": "^0.12.9",
		"typescript": "^5.8.3",
		"vitest": "^1.1.2"
