{
	"name": "ccapproval",
	"version": "1.0.0",
	"description": "Claude Code Slack approval system via MCP",
	"type": "module",
	"main": "dist/index.js",
	"bin": "dist/index.js",
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=22.0.0"
	},
	"scripts": {
